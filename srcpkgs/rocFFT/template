# Template file for 'rocFFT'
pkgname=rocFFT
version=5.5.0
revision=1
archs="x86_64"
build_style=cmake
configure_args="-Wno-dev -DSQLITE_USE_SYSTEM_PACKAGE=ON -DCMAKE_CXX_COMPILER=/opt/rocm/bin/hipcc -DCMAKE_C_COMPILER=/opt/rocm/bin/hipcc -DCMAKE_INSTALL_PREFIX=/opt/rocm -DCMAKE_INSTALL_LIBDIR=lib -DAMDGPU_TARGETS=$(vopt_if gfx803 'gfx803;')$(vopt_if gfx900 'gfx900;')$(vopt_if gfx906 'gfx906;')$(vopt_if gfx908 'gfx908;')$(vopt_if gfx90a 'gfx90a;')$(vopt_if gfx1010 'gfx1010;')$(vopt_if gfx1011 'gfx1011;')$(vopt_if gfx1012 'gfx1012;')$(vopt_if gfx1030 'gfx1030;')$(vopt_if gfx1031 'gfx1031;')$(vopt_if gfx1100 'gfx1100;')$(vopt_if gfx1101 'gfx1101;')$(vopt_if gfx1102 'gfx1102;')"
hostmakedepends="hipamd rocm-llvm python3"
makedepends="rocm-cmake ROCm-Device-Libs sqlite-devel ROCm-CompilerSupport"
depends="ROCm-core"
short_desc="Next generation FFT implementation for ROCm"
maintainer="Erick Vilcica <erick.vilcica@protonmail.com>"
license="MIT"
homepage="https://github.com/ROCmSoftwarePlatform/rocFFT/"
changelog="https://github.com/ROCmSoftwarePlatform/rocFFT/raw/develop/CHANGELOG.md"
distfiles="https://github.com/ROCmSoftwarePlatform/rocFFT/archive/rocm-${version}.tar.gz"
checksum=9288152e66504b06082e4eed8cdb791b4f9ae2836b3defbeb4d2b54901b96485
LDFLAGS=-L/opt/rocm/lib

# GPU architectures to build for
build_options="gfx803 gfx900 gfx906 gfx908 gfx90a gfx1010 gfx1011 gfx1012 gfx1030 gfx1031 gfx1100 gfx1101 gfx1102"

build_options_default="gfx803 gfx900 gfx906 gfx908 gfx90a gfx1010 gfx1011 gfx1012 gfx1030 gfx1031 gfx1100 gfx1101 gfx1102"

post_install() {
	vlicense LICENSE.md
}
