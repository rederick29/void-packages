# Template file for 'rocm-flang-pgmath'
pkgname=rocm-flang-pgmath
version=6.1.0
revision=1
archs="x86_64"
build_style=cmake
configure_args="-G Ninja -B . -S ../runtime/libpgmath -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/opt/rocm/lib/llvm -DCMAKE_CXX_COMPILER=/opt/rocm/lib/llvm/bin/clang++ -DCMAKE_C_COMPILER=/opt/rocm/lib/llvm/bin/clang -DCMAKE_C_FLAGS=-I/builddir/${pkgname}-${version}/runtime/libpgmath/lib/common -DCMAKE_CXX_FLAGS=-I/builddir/${pkgname}-${version}/runtime/libpgmath/lib/common -DLIBPGMATH_STANDALONE_BUILD=ON"
hostmakedepends="rocm-llvm python3"
depends="rocm-llvm"
short_desc="ROCm flang pgmath library"
maintainer="Erick Vilcica <erick.vilcica@protonmail.com>"
license="custom:Proprietary"
homepage="https://github.com/ROCm-Developer-Tools/flang"
distfiles="https://github.com/ROCm-Developer-Tools/flang/archive/rocm-${version}.tar.gz"
checksum=51ecd2c154568c971f5b46ff0e1e1b57063afe28d128fc88c503de88f7240267
LDFLAGS=-L/opt/rocm/lib

do_configure() {
	if [ ! -d build ]; then
		mkdir build
	fi
	cd build
	CFLAGS="-DNDEBUG ${CFLAGS/ -pipe / }" CXXFLAGS="-DNDEBUG ${CXXFLAGS/ -pipe / }" cmake ${cmake_args} ${configure_args} ../runtime/libpgmath
}

post_install() {
	vlicense runtime/libpgmath/LICENSE.txt
}
